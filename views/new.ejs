<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('../partials/head.ejs') %>
    <link rel="stylesheet" type="text/css" href="/public/css/update_style.css">
    <script defer src='/public/scripts/api.js'></script>
</head>
<body>
    <%- include('../partials/nav.ejs') %>
    <div class='products-container'>
        <div class='product'>
            <%-include('../partials/form.ejs') %>
            <form action='/gift-guide' method='post'>
                <input class='info' id='imgURL' class='info' type='text' name='imgURL' placeholder='Image URL'>
                <input class='info' type='text' name='name' placeholder='Name'>
                <input class='info' type='text' name='holiday' placeholder='Holiday'>
                <input class='info' type='text' name='recipient' placeholder='Recipient'>
                <input class='info' type='text' name='price' placeholder='Price'>
                <input class='info' type='text' name='quantity' placeholder='Quantity'>
                <input class='info' type='text' name='productURL' placeholder='Product URL'>
                <p class='checkbox'>In Stock: <input class='info' type='checkbox' name='inStock'></p>
                <p class='checkbox'>Purchased: <input class='info' type='checkbox' name='purchased'></p>
                <input class='submit' type='submit' name='Submit'>
            </form>
        </div>
    </div>
</body>
</html>